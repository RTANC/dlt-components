<html lang="th">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GCS01</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <style>{#asset GCS.css @encoding=utf8}</style>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row my-3">
        <div class="col-12 d-flex justify-content-center">
          <table style="width: 75%">
            <thead>
              <tr>
                <th>
                  <div>ประเภทรถ</div>
                </th>
                <th>
                  <div>ปริมาณรถรับส่งสินค้าทั้งหมดผ่านสถานี (คัน)</div>
                </th>
                <th>
                  <div>จำนวนรถรับส่งสินค้า (คัน)</div>
                </th>
                <th>
                  <div>ปริมาณสินค้า (ตัน)</div>
                </th>
              </tr>
            </thead>
            <tbody>
              {{#each reportData}}
              <tr>
                <td>
                  <div class="d-flex justify-content-start">{{this.Description}}</div>
                </td>
                <td>
                  <div class="d-flex justify-content-end">{{numberFormatter this.NVehicle}}</div>
                </td>
                <td>
                  <div class="d-flex justify-content-end">{{numberFormatter this.Qty}}</div>
                </td>
                <td>
                  <div class="d-flex justify-content-end">{{numberFormatte2 this.GoodsW}}</div>
                </td>
              </tr>
              {{/each}}
              {{#with (SUM reportData)}}
              <tr>
                <td>
                  <div class="d-flex justify-content-start sum-row">รวม</div>
                </td>
                <td>
                  <div class="d-flex justify-content-end sum-row">{{0}}</div>
                </td>
                <td>
                  <div class="d-flex justify-content-end sum-row">{{1}}</div>
                </td>
                <td>
                  <div class="d-flex justify-content-end sum-row">{{2}}</div>
                </td>
              </tr>
              {{/with}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div style="page-break-before: always;"></div>
    <div class="container-fluid">
      <div class="row my-3 mx-2">
        <div class="col-12 d-flex justify-content-center align-items-center">
          <div id="chart1"></div>
        </div>
      </div>
    </div>
    <div style="page-break-before: always;"></div>
    <div class="container-fluid">
      <div class="row my-3 mx-2">
        <div class="col-12 d-flex justify-content-center align-items-center">
          <div id="chart2"></div>
        </div>
      </div>
    </div>
    {#asset /GCS13/GCS13-chart.js @encoding=utf8}
  </body>
</html>